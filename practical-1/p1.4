<!DOCTYPE html>
<html>
<head>
    <title>JavaScript Operators</title>
</head>
<body>
<h2>Arithmetic and Logical Operations</h2>
  <script>
       let a = 20;
        let b = 6;
       document.write("Arithmetic Operations<br>");
        document.write("a + b = " + (a + b) + "<br>");
        document.write("a - b = " + (a - b) + "<br>");
        document.write("a * b = " + (a * b) + "<br>");
        document.write("a / b = " + (a / b) + "<br>");
        document.write("a % b = " + (a % b) + "<br><br>");
       let x = true;
        let y = false;
       document.write("Logical Operations<br>");
        document.write("x && y = " + (x && y) + "<br>");
        document.write("x || y = " + (x || y) + "<br>");
        document.write("!x = " + (!x) + "<br>");
    </script>
</body>
</html>
